{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "yarn eslint:check && yarn prettier:check && yarn stylelint:check",
    "lint:fix": "yarn eslint:fix && yarn prettier:fix && yarn stylelint:fix",
    "eslint:fix": "next lint --fix .",
    "eslint:check": "next lint",
    "stylelint:fix": "stylelint './**/*.{css,scss}' --fix --aei",
    "stylelint:check": "stylelint './**/*.{css,scss}' --aei",
    "prettier:fix": "prettier --write './**/*.{js,jsx}'",
    "prettier:check": "prettier --check './**/*.{js,jsx}'",
    "test": "jest",
    "test:coverage": "jest --coverage --collectCoverage --coverageDirectory ../test-coverage"
  },
  "dependencies": {
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.4.3",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "babel-jest": "^27.5.1",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "stylelint-config-standard": "^25.0.0"
  }
}
